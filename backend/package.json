{
  "name": "speaking-test-booking-backend",
  "version": "1.0.0",
  "description": "Backend API for Speaking Test Booking System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:prod": "tsc -p tsconfig.prod.json",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "db:backup": "../deployment/database-maintenance.sh backup",
    "db:maintenance": "../deployment/database-maintenance.sh full",
    "test:slots": "tsx src/test-slots-simple.ts",
    "verify:task5": "tsx src/verify-task5.ts",
    "test:comprehensive": "tsx src/run-comprehensive-tests.ts",
    "test:booking": "tsx src/tests/integration-booking.test.ts",
    "test:auth": "tsx src/tests/integration-auth.test.ts",
    "test:assessment": "tsx src/tests/integration-assessment.test.ts",
    "test:notifications": "tsx src/tests/integration-notifications.test.ts",
    "test:audit": "tsx src/tests/integration-audit.test.ts",
    "test:mobile": "tsx src/tests/integration-mobile-isolation.test.ts",
    "test:cleanup": "tsx -e \"import { testDataManager } from './src/tests/setup'; testDataManager.cleanup().then(() => console.log('Test cleanup completed')).catch(console.error)\"",
    "health:check": "curl -f http://localhost:3001/health || exit 1",
    "logs:view": "tail -f /var/log/speaking-test-booking/combined.log",
    "logs:error": "tail -f /var/log/speaking-test-booking/error.log",
    "validate:schema": "node validate-schema.js",
    "precommit": "npm run validate:schema && npm run lint",
    "lint": "echo 'Linting not configured yet'",
    "deploy": "./scripts/deploy.sh"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.76.1",
    "@types/pg": "^8.15.5",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "pg": "^8.16.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.24",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^8.57.0",
    "tsx": "^4.7.1",
    "typescript": "~5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
